Q1. WRITE A C PROGRAM TO IMPLEMENT TRAPEZOIDAL RULE .

#include <stdio.h>
#include <math.h>


double function(double x) {
    
    return x * x;
}


double trapezoidal_rule(double a, double b, int n) {
    double h = (b - a) / n;
    double sum = 0.5 * (function(a) + function(b));

    for (int i = 1; i < n; i++) {
        double x = a + i * h;
        sum += function(x);
    }

    return h * sum;
}

int main() {
    double a, b;
    int n;

    printf("Enter the lower limit of integration (a): ");
    scanf("%lf", &a);
    printf("Enter the upper limit of integration (b): ");
    scanf("%lf", &b);
    printf("Enter the number of subintervals (n): ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Number of subintervals (n) must be greater than 0.\n");
        return 1;
    }

    double result = trapezoidal_rule(a, b, n);

    printf("Approximate integral: %lf\n", result);

    return 0;
}



Q2. WRITE A C PROGRAM FOR SIMPSON 1/3 RULE .

#include <stdio.h>
#include <math.h>


double function(double x) {
    // Define your function here
    return x * x *x;
}


double simpsons_one_third_rule(double a, double b, int n) {
    double h = (b - a) / n;
    double sum = function(a) + function(b);

    for (int i = 1; i < n; i++) {
        double x = a + i * h;
        if (i % 2 == 0) {
            sum += 2 * function(x);
        } else {
            sum += 4 * function(x);
        }
    }

    return h * sum / 3.0;
}

int main() {
    double a, b;
    int n;

    printf("Enter the lower limit of integration (a): ");
    scanf("%lf", &a);
    printf("Enter the upper limit of integration (b): ");
    scanf("%lf", &b);
    printf("Enter the number of subintervals (n): ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Number of subintervals (n) must be greater than 0.\n");
        return 1;
    }

    double result = simpsons_one_third_rule(a, b, n);

    printf("Approximate integral: %lf\n", result);

    return 0;
}


Q3. WRITE A C PROGRAM FOR SIMPSON 3/8 RULE .

#include <stdio.h>
#include <math.h>


double function(double x) {
    
    return x * x * x;
}


double simpsons_three_eighth_rule(double a, double b, int n) {
    double h = (b - a) / n;
    double sum = function(a) + function(b);

    for (int i = 1; i < n; i++) {
        double x = a + i * h;
        if (i % 3 == 0) {
            sum += 2 * function(x);
        } else {
            sum += 3 * function(x);
        }
    }

    return 3 * h * sum / 8.0;
}

int main() {
    double a, b;
    int n;

    printf("Enter the lower limit of integration (a): ");
    scanf("%lf", &a);
    printf("Enter the upper limit of integration (b): ");
    scanf("%lf", &b);
    printf("Enter the number of subintervals (n): ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Number of subintervals (n) must be greater than 0.\n");
        return 1;
    }

    double result = simpsons_three_eighth_rule(a, b, n);

    printf("Approximate integral: %lf\n", result);

    return 0;
}



